{% extends 'base.html.twig' %}

{% block title %}{{ 'editProject.title'|trans }}{{ 'general.html.title.separator'|trans }}{{ 'general.application.title'|trans }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>{{ 'editProject.heading'|trans }}</h1>
            <p>{{ 'editProject.titleDescription'|trans }}</p>

            <form action="{{ path('app_projects.update', { 'id': project.id }) }}" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">{{ 'editProject.labelProjectName'|trans }}</label>
                    <input type="text" name="name" id="name" class="form-control" value="{{ project.name }}" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">{{ 'editProject.buttonSave'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}