{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.login.title'|trans }}{{ 'admin.general.titleSeparator'|trans }}{{ 'admin.general.applicationTitle'|trans }}#}{% endblock %}

{% block additionalCss %}
    <link href="{{ asset('admin/css/login.css') }}" rel="stylesheet">
{% endblock %}

{% block additionalBodyTags %} class="btLoginPage text-center visitor"{% endblock %}
{% block headerNavigation %}{% endblock %}

{% block body %}
<main class="form-signin form-registration w-100 m-auto">
    <h1>{{ 'admin.general.applicationTitle'|trans }}</h1>
    {{ form_start(adminLoginForm) }}
        <div class="form-floating">
            {{ form_widget(adminLoginForm.email, {'attr': {'type': 'email', 'class': 'form-control'}}) }}
            {{ form_label(adminLoginForm.email) }}
        </div>
        <div class="form-floating">
            {{ form_widget(adminLoginForm.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(adminLoginForm.password) }}
        </div>
        {{ form_widget(adminLoginForm.submit, {'attr': {'class': 'w-100 btn btn-lg btn-primary'}}) }}
    {{ form_end(adminLoginForm) }}
</main>
{% endblock %}