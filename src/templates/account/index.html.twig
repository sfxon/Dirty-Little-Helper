{% extends 'base.html.twig' %}

{% block title %}Mein Account | BetterTime{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="dlh-site-heading">
                <h1>Mein Account</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col col-md-9 col-lg-6">
            <h2>E-Mail Adresse</h2>
            {{ form_start(emailForm) }}
                <div class="form-floating mb-3">
                    {{ form_widget(emailForm.email, {'attr': {'type': 'email', 'class': 'form-control'}}) }}
                    {{ form_label(emailForm.email) }}
                </div>
                {{ form_widget(emailForm.save, {'attr': {'class': 'btn btn-primary mb-3'}}) }}
            {{ form_end(emailForm) }}
        </div>
    </div>

    <div class="row">
        <div class="col col-md-9 col-lg-6">
            <hr />
            <h2>Passwort</h2>
            {{ form_start(passwordForm) }}
                <div class="form-floating mb-3">
                    {{ form_widget(passwordForm.password.first, {'attr': {'class': 'form-control'}}) }}
                    {{ form_label(passwordForm.password.first) }}
                </div>

                <div class="form-floating mb-3">
                    {{ form_widget(passwordForm.password.second, {'attr': {'class': 'form-control'}}) }}
                    {{ form_label(passwordForm.password.second) }}
                </div>

                {{ form_widget(passwordForm.save, {'attr': {'class': 'btn btn-primary mb-3'}}) }}
            {{ form_end(passwordForm) }}
        </div>
    </div>
</div>
{% endblock %}
